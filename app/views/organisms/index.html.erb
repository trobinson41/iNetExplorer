<p id="notice"><%= notice %></p>

<h1>Organisms</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Family</th>
      <th>Genus</th>
      <th>Species</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organisms.each do |organism| %>
      <tr>
        <td><%= organism.order %></td>
        <td><%= organism.family %></td>
        <td><%= organism.genus %></td>
        <td><%= organism.species %></td>
        <td><%= link_to 'Show', organism %></td>
        <td><%= link_to 'Edit', edit_organism_path(organism) %></td>
        <td><%= link_to 'Destroy', organism, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Organism', new_organism_path %>
